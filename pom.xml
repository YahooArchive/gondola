    <ciManagement>
        <system>Travis CI</system>
        <url>https://travis-ci.org/yahoo/gondola/</url>
    </ciManagement>
    <developers>
        <developer>
            <name>Patrick Chan</name>
            <email>patc@yahoo-inc.com</email>
        </developer>
        <developer>
            <name>Wei-Cheng Pan</name>
            <email>wcpan@yahoo-inc.com</email>
        </developer>
    </developers>

    <organization>
        <name>Yahoo! Inc</name>
        <url>https://www.yahoo.com/</url>
    </organization>

